<h1>Lista de Libros</h1>

<table class="table">
  <thead>
    <tr>
      <th>ISBN</th>
      <th>Clave</th>
      <th>Título</th>
      <th>Autor</th>
      <th>Editorial</th>
      <th>Stock</th>
      <th>Precio</th>
      <th>Proveedor</th>
      <th>Categoría</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.claveinterna %></td>
        <td><%= book.titulo %></td>
        <td><%= book.autor %></td>
        <td><%= book.editorial %></td>
        <td><%= book.stock %></td>
        <td><%= book.precio %></td>
        <td><%= book.provider.NombreProvider %></td>
        <td><%= book.category.nombreCategoria %></td>
        <td><%= link_to 'Mostrar', book %></td>
        <td><%= link_to 'Editar', edit_book_path(book) %></td>
        <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: '¿Desea eliminar este Libro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Libro', new_book_path %>
