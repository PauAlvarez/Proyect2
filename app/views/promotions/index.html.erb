<%- model_class = Promotion -%>
<div class="page-header">
  <h1>Promociones</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Id) %></th>
      <th><%= model_class.human_attribute_name(:Fecha) %></th>
      <th><%= model_class.human_attribute_name(:Medio_comunicacion) %></th>
      <th><%= model_class.human_attribute_name(:Descripcion) %></th>
      <th><%= model_class.human_attribute_name(:Acuerdo) %></th>
      <th><%= model_class.human_attribute_name(:usuario) %></th>
      <th><%= model_class.human_attribute_name(:cliente) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= link_to promotion.id, promotion_path(promotion) %></td>
        <td><%= promotion.fechapromo.strftime("%d %b %y %H:%M:%S") %></td>
        <td><%= promotion.mediodecomunica %></td>
        <td><%= promotion.descrippromo %></td>
        <td><%= promotion.acuerdo %></td>
        <td><%= promotion.user.email %></td>
        <td><%= promotion.client_id %></td>
        <td><%=l promotion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_promotion_path(promotion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      promotion_path(promotion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_promotion_path,
            :class => 'btn btn-primary' %>
