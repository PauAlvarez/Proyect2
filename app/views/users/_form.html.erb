<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :nombreUser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :nombreUser, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :direccionUser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :direccionUser, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :telefonoUser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefonoUser, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :emailUser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :emailUser, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contrasenaUser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contrasenaUser, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :roluser, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :roluser, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
