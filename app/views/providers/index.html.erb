<h1>Lista de los Proveedores</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Fecha de Asociación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.NombreProvider %></td>
        <td><%= provider.direccionProvider %></td>
        <td><%= provider.fechadasoProvider %></td>
        <td><%= link_to 'Mostrar', provider %></td>
        <td><%= link_to 'Editar', edit_provider_path(provider) %></td>
        <td><%= link_to 'Eliminar', provider, method: :delete, data: { confirm: '¿Desea eliminar este Proveedor?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_provider_path %>
